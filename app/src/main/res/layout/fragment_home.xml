<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment"
    android:background="@drawable/curved_background">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/home_fragment_reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prosthetic.Go"
                android:textColor="@color/colorWhite"
                android:textSize="40sp"
                android:fontFamily="@font/brelaregular"/>

            <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_white_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/home_menu_rehab"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/colorPrimary"/>

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/home_menu_rehab_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_rehab_24"
                                app:tint="@color/colorWhite"/>

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/home_menu_rehab_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rehabilitasi"
                                android:textColor="@color/colorWhite"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/home_menu_psiko"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/colorPrimary"/>

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/home_menu_psiko_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_round_accessibility_new_24"
                                app:tint="@color/colorWhite"/>

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/home_menu_psiko_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Psikologi"
                                android:textColor="@color/colorWhite"/>

                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="100dp"
                        android:layout_height="100dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/home_menu_belanja"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@color/colorPrimary"/>

                        <RelativeLayout
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/home_menu_belanja_icon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_round_shopping_cart_24"
                                app:tint="@color/colorWhite"/>

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_below="@id/home_menu_belanja_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Belanja"
                                android:textColor="@color/colorWhite"/>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white_border"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/home_menu_layanan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="25dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Layanan Prostesis"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>