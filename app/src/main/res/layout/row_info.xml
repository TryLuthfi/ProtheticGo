<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/row_info_img"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_broken_image_24"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/row_info_judul"
        android:layout_toRightOf="@id/row_info_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Row Info Title"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:maxLength="100"
        android:ellipsize="end"
        android:layout_marginLeft="5dp"
        android:id="@+id/row_info_isi"
        android:layout_below="@id/row_info_judul"
        android:layout_toRightOf="@id/row_info_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet."/>

</RelativeLayout>